{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
        // "target": "es2015",

    "module": "commonjs", // <-- here
    "target": "es2017", // <-- here
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true ,

  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}


